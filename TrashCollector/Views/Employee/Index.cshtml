@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OneTimePickUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspendStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspendEndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PickUpDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OneTimePickUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuspendStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuspendEndDate)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.BalanceDue">Balance</a>*@
      
            </td>
        </tr>
}
    </tbody>
</table>
