@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Suspend";
}

<h1>Suspend</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Suspend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label asp-for="PickUpDay" class="control-label"></label>
                <input asp-for="PickUpDay" class="form-control" />
                <span asp-validation-for="PickUpDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OneTimePickUp" class="control-label"></label>
                <input asp-for="OneTimePickUp" class="form-control" />
                <span asp-validation-for="OneTimePickUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendStartDate" class="control-label"></label>
                <input asp-for="SuspendStartDate" class="form-control" />
                <span asp-validation-for="SuspendStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendEndDate" class="control-label"></label>
                <input asp-for="SuspendEndDate" class="form-control" />
                <span asp-validation-for="SuspendEndDate" class="text-danger"></span>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
